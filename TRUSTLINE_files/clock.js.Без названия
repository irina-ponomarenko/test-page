$(document).ready(function(){var clock;var currentDate=new Date();var targetDate=moment.tz("2018-06-01 23:59","Australia/Sydney");var diff=targetDate/1000-currentDate.getTime()/1000;if(diff<=0){clock=$(".clock").FlipClock(0,{clockFace:"DailyCounter",countdown:true,autostart:false});console.log("Date has already passed!")}else{clock=$(".clock").FlipClock(diff,{clockFace:"DailyCounter",countdown:true,callbacks:{stop:function(){console.log("Timer has ended!")}}});setTimeout(function(){checktime();},1000);function checktime(){t=clock.getTime();if(t<=0){clock.setTime(0);}setTimeout(function(){checktime();},1000);}}});